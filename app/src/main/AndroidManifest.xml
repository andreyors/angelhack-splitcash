<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.angelhack.hackalone.splitcash" >

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:name="com.angelhack.hackalone.splitcash.App">
        <activity
            android:name="com.angelhack.hackalone.splitcash.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data
                    android:host="split-cash-justhack.c9users.io"
                    android:pathPrefix="/api"
                    android:scheme="http" />
            </intent-filter>
        </activity>
        <activity android:name="com.angelhack.hackalone.splitcash.MainActivity" android:theme="@style/AppTheme.Dark"/>
        <activity android:name="com.angelhack.hackalone.splitcash.LoginActivity" android:theme="@style/AppTheme.Dark" />
        <activity android:name="com.angelhack.hackalone.splitcash.SignupActivity" android:theme="@style/AppTheme.Dark" />
    </application>

</manifest>
